<h1>メニュー一覧</h1>
<%= link_to '新規メニュー追加', new_menu_path, class: "btn btn-primary" %>

<div class="row">
  <% @menus.each do |menu| %>
    <div class="col-md-4">
      <h2><%= link_to menu.name, menu_path(menu) %></h2>
      <p><%= menu.description %></p>
      <p>価格: ¥<%= menu.price %></p>
      <% if menu.image.attached? %>
        <%= image_tag menu.image, class: "img-fluid" %>
      <% end %>
    </div>
  <% end %>
</div>