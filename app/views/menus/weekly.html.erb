<section class="p-4" style="background-color: ivory;">
  <h2 class="mb-3 text-dark">今週のメニュー</h2>

  <table id="weekly-menu-table" class="table mb-4">
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
      </tr>
    </thead>
    <tbody>
      <% @weekly_menus.each do |menu| %>
        <tr>
          <td><%= menu.name %></td>
          <td>¥<%= number_with_delimiter(menu.price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex gap-2">
    <%= link_to "予約する", new_users_reservation_path, class: "btn btn-success flex-fill" %>
    <%= link_to "トップページへ戻る", root_path,           class: "btn btn-secondary flex-fill" %>
  </div>
</section>

