<h2>プロフィール編集</h2>

<%= form_for @user, url: users_profile_path, method: :patch, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :username, "ユーザー名" %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :avatar, "プロフィール画像" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>