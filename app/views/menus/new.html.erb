<h1>新しいメニューを登録</h1>

<%= form_with(model: @menu, local: true) do |form| %>
  <div>
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "説明" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, "価格" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :image, "商品画像" %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "登録" %>
<% end %>