<h2>レビュー投稿</h2>

<%= form_with model: @review, url: users_reservation_review_path(@reservation), local: true do |f| %>
  <div class="form-group">
    <%= f.label :rating, "評価 (1〜5)" %>
    <%= f.select :rating, (1..5).to_a, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "レビュー内容" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <%= f.submit "投稿", class: "btn btn-primary mt-3" %>
<% end %>