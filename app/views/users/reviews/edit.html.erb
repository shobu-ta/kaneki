<h2>レビュー編集</h2>
<p><strong>対象メニュー:</strong> <%= @menu.present? ? @menu.name : "メニュー情報がありません" %></p>
<%= form_with model: @review, url: users_menu_review_path, method: :patch, local: true do |f| %>
  <div class="form-group">
    <%= f.label :rating, "評価 (1〜5)" %>
    <%= f.select :rating, (1..5).to_a, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, "レビュー内容" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <%= f.submit "更新", class: "btn btn-primary mt-3" %>
  <%= link_to "キャンセル", users_reviews_path(@menu), class: "btn btn-secondary mt-3" %>
<% end %>