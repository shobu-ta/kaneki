<h1 class="text-center fw-bold mb-4">メニュー一覧</h1>

<div class="row">
  <% @menus.each do |menu| %>
    <div class="col-md-4 d-flex align-items-stretch">
      <div class="card shadow-sm mb-4 h-100">
        <% if menu.image.attached? %>
          <%= image_tag menu.image, class: "card-img-top img-fluid rounded" %>
        <% else %>
          <%= image_tag "placeholder.png", class: "card-img-top img-fluid rounded" %>
        <% end %>

        <div class="card-body d-flex flex-column">
          <h2 class="card-title"><%= link_to menu.name, menu_path(menu), class: "text-decoration-none text-dark" %></h2>
          <p class="card-text flex-grow-1"><%= menu.description %></p>
          <p class="text-primary fw-bold">価格: ¥<%= menu.price %></p>
          <%= link_to "詳細を見る", menu_path(menu), class: "btn btn-success mt-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>