<h2>予約フォーム（会員専用）</h2>

<%= form_with model: @reservation, url: users_reservations_confirm_path, method: :post, local: true do |f| %>

  <h3>予約する商品</h3>
  <% if @weekly_menus.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>価格</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% @weekly_menus.each do |menu| %>
          <tr>
            <td><%= menu.name %></td>
            <td>¥<%= menu.price %></td>
            <td>
              <%= f.number_field :quantities, value: 0, min: 0, name: "quantities[#{menu.id}]", class: "form-control" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>今週のメニューがありません。</p>
  <% end %>

  <div class="actions">
    <%= f.submit "予約確認", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "キャンセル", weekly_menus_path, class: "btn btn-secondary" %>