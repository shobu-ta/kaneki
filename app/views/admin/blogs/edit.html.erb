<h2>ブログ編集</h2>

<%= form_with model: [:admin, @blog], local: true do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content, "内容" %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :images, "画像を選択（複数可）" %>
    <%= f.file_field :images, multiple: true %>
  </div>

  <% if @blog.images.attached? %>
    <div class="current-images">
      <p>現在の画像:</p>
      <% @blog.images.each do |image| %>
        <%= image_tag image, style: "max-width: 200px; height: auto;" %>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "ブログ一覧に戻る", admin_blogs_path, class: "btn btn-secondary" %>