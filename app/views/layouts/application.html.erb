<!DOCTYPE html>
<html>
  <head>
    <title>Kaneki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css', media: 'all' %>

    <!-- Custom Styles -->
    <style>
      body {
        background-color: #f8f9fa;
      }
      /* ナビゲーションのブランドロゴを強調 */
      .navbar-brand {
        font-weight: bold;
        font-size: 1.75rem;
      }
      /* ナビゲーションリンクの拡大 */
      .nav-link {
        font-size: 1.1rem;
      }
      /* ヒーローセクション */
      .hero {
        padding: 4rem 0;
        background: url('https://via.placeholder.com/1920x400') no-repeat center center;
        background-size: cover;
        color: #fff;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.7);
      }
      .hero h1 {
        font-size: 3rem;
        font-weight: 700;
      }
      .hero p {
        font-size: 1.5rem;
      }
      /* フッター */
      footer {
        background-color: #343a40;
        color: #fff;
        padding: 1rem 0;
        margin-top: 2rem;
      }
    </style>

    <!-- Bootstrap JavaScript and Popper.js -->
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <!-- ヘッダー：ダークなナビゲーションバー -->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="<%= root_path %>">Kaneki</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to 'Home', root_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Menu', menus_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to '今週のMenu＆予約', weekly_menus_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Blog', blogs_path, class: 'nav-link' %>
              </li>
            </ul>
            <ul class="navbar-nav ms-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to '会員専用ページ', users_mypage_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

   

    <!-- コンテンツ -->
    <main class="container mt-4">
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer>
      <div class="container text-center">
        <p>&copy; <%= Date.today.year %> Kaneki. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>