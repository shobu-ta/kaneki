<h2>管理者用ブログ一覧</h2>

<%= link_to '新規ブログ作成', new_admin_blog_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>作成日時</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, admin_blog_path(blog) %></td>
        <td><%= blog.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to '編集', edit_admin_blog_path(blog), class: 'btn btn-warning' %>
          <%= link_to '削除', admin_blog_path(blog), method: :delete, class: 'btn btn-danger', data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>